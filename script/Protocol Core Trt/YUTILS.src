##################################################
# Sostituzione di una stringa con un'altra
##################################################

Subprog REPLACE(TEXTE,AVANT,APRES)
  Variable Char   TEXTE ()
  Value    Char AVANT ()
  Value    Char APRES ()
  Local    Integer IYA,START
  IYA=1 : START=1
  While IYA
    IYA = instr(START,TEXTE,AVANT)
    If IYA
      TEXTE=left$(TEXTE,IYA-1)+APRES+right$(TEXTE,IYA+len(AVANT))
      START = IYA+len(APRES)
    Endif
  Wend
End


