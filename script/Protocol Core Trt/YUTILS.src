Funprog YJOIN(ARRAY,SEP)
  Value Char ARRAY
  Value Char SEP
  Local Char RESULT(250)

  For I=0 To dim(ARRAY)-1
    If vireblc(num$(ARRAY(I)),2)<>""
      If RESULT<>"" : RESULT+=SEP : Endif
      RESULT+=num$(ARRAY(I))
    Endif
  Next
End RESULT

