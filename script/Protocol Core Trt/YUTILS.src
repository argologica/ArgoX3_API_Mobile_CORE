Funprog ENCODE_URL(_URL)
  Variable Char _URL
  Local Char CHR(1)
  Local Char URL(250)

  For I=1 To len(_URL)
    CHR = mid$(_URL,I,1)
    If find(CHR,",","/","?",":","@","&","=","+","#"," ",'"',"'","%")
      URL += "%40"
    Else
      URL+= CHR
    Endif
  Next
End URL


