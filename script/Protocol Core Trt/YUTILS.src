#*!

Funprog FIND_MULTITEM(PARAMS_ARR, YKEY, YPOS)

  Value Char PARAMS_ARR()(,)
  Value Char YKEY
  Value Integer YPOS

  Local Integer YMAX: YMAX =dim(PARAMS_ARR,1)*dim(PARAMS_ARR,2)
  Local Integer YFOUND(YMAX)  #array con le posizioni (righe) della YKEY cercata
  Local Integer I,J
