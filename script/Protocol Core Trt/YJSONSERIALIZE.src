  Value Char YKEY
  Value Char YARRAY()()
  Value Integer WITHSEP
  Local Clbfile YRESULT(250)

  YRESULT = func GET_KEY(YKEY) + func GET_OPENSQUAREBRACKET() #[
  Local Integer I, ARRAY_SIZE : ARRAY_SIZE = func YUTILS.COUNT(YARRAY) - 1
