  Value Char YKEY
  Value Char YARRAY()(,)
  Value Integer WITHSEP

  Local Char YRESULT (250)

  YRESULT = func GET_STRVALUE(YKEY) + func GET_OPENCURLYBRACKET_ARRAY() #"YKEY": [
