          YFIELDS(Y1EN,YCOL_FOCUS)= "1" # "0"   #focus spostato su primo campo editabile
        When 2  #errore (=2)
          YFIELDS(YI,YCOL_FOCUS)= "1" # "0" #focus su campo corrente
