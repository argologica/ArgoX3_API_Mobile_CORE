$SET_AX3M_FIELDS

  FIELDS(0) = "YBPCNUM" : FIELDS(1) = "YBPRNAM" : FIELDS(2) = "BPAADD" : FIELDS(3) = "BPAADDLIG"
  FIELDS(4) = "CRY" : FIELDS(5) = "POSCOD" : FIELDS(6) = "CTY"
  FIELDS(7) = "TEL" : FIELDS(8) = "WEB" : FIELDS(9) = "FCYWEB"
  FIELDS(10) = "actions"

Return

