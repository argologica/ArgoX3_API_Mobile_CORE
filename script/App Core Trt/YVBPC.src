Subprog C_YCTYVBPC(BPCNUM,BPRNAM,YCTY,YBPAADDLIG,YAX3MRESP,YRESPONSE,YBPCNUM,YBPRNAM,BPAADD,BPAADDLIG,CRY,POSCOD,CTY,TEL,WEB,FCYWEB)

  Variable Char BPCNUM
  Variable Char BPRNAM
  Variable Char YCTY
  Variable Char YBPAADDLIG

  Value Clbfile YAX3MRESP
  Variable Clbfile YRESPONSE

  Variable Char YBPCNUM()
  Variable Char YBPRNAM()
  Variable Char BPAADD()
  Variable Char BPAADDLIG()
  Variable Char CRY()
  Variable Char POSCOD()
  Variable Char CTY()
  Variable Char TEL()
  Variable Char WEB()
  Variable Char FCYWEB()

  Local File POSCOD [F:YPOS]

  Call OUVRE_TRACE("C_YCTYVBPC") From LECFIC

  Gosub INIT_FILE
  YACTION = "YCYCTYVBPC"
  YCURRFIELD = "YCTY"

  #init
  Gosub YAX3MOB_INIT_ACTIONFIELD From YAX3MUTILS

  #Business logic
  YCTY = func YAX3MCRMLIB.YVALIDATECTY(YCTY)

  Filter [F:YPOS] Where ([F:YPOS]CRY = "IT" & toupper([F:YPOS]POSCTY) = YCTY)
  If(rowcount([F:YPOS])> 0)
    Read [F:YPOS] First
    Call YAX3MOB_SETLABEL(YFIELDS,YCURRFIELD,0,"Provincia:"-[F:YPOS]POSCTYCOD,CURRENTROW) From YAX3MUTILS
  Endif
  mkstat = 0

  #end
  Gosub YAX3MOB_END_ACTIONFIELD_NOFOCUS From YAX3MUTILS
  Call FERME_TRACE From LECFIC
End

